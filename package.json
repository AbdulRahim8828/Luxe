{
  "name": "a1-furniture-polish",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "tsx scripts/preBuildErrorFixer.ts",
    "build": "npm run prebuild && npm run generate:blog && npm run optimize:images && vite build && npm run generate:sitemap && npm run format:sitemap",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "generate:sitemap": "tsx scripts/generateOptimizedSitemap.ts",
    "format:sitemap": "prettier --write dist/sitemap.xml",
    "optimize:images": "tsx scripts/optimizeImages.ts",
    "generate:pages": "tsx scripts/generatePages.ts",
    "generate:seo-pages": "tsx scripts/generateSEOPages.ts",
    "generate:favicons": "tsx scripts/generateFavicons.ts",
    "generate:blog": "tsx blog/scripts/generateBlogContent.ts",
    "blog:new": "tsx blog/scripts/createBlogPost.ts",
    "blog:validate": "tsx blog/scripts/validateBlogContent.ts",
    "fix": "tsx scripts/quickFix.ts",
    "fix:comprehensive": "tsx scripts/buildErrorHandler.ts",
    "fix:case": "tsx scripts/fixCaseSensitivity.ts",
    "cleanup": "tsx scripts/cleanupBuildArtifacts.ts",
    "fix:all": "tsx scripts/fixAllBuildIssues.ts"
  },
  "dependencies": {
    "@sparticuz/chromium": "^123.0.0",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.544.0",
    "marked": "^12.0.0",
    "node-html-to-image": "^5.0.0",
    "puppeteer-core": "^24.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.22.3",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.3",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "fast-check": "^4.4.0",
    "jsdom": "^27.3.0",
    "lightningcss": "^1.30.2",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^3.4.3",
    "terser": "^5.44.1",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "vite": "^7.2.2",
    "vite-plugin-sitemap": "^0.8.2",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^4.0.15"
  }
}
